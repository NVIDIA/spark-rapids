# This script generates the build info.
# Arguments:
#   rapids4spark_version - The current version of spark plugin

echo_build_properties() {
  echo version=$1
  echo user=$USER
  echo revision=$(git rev-parse HEAD)
  echo branch=$(git rev-parse --abbrev-ref HEAD)
  echo date=$(date -u +%Y-%m-%dT%H:%M:%SZ)
  echo url=$(git config --get remote.origin.url)
}

echo_build_properties $1

# Parse cudf and spark files from local mvn repo
${WORKSPACE}/jenkins/printJarVersion.sh "cudf_version" "${WORKSPACE}/.m2/ai/rapids/cudf/${CUDF_VER}" "cudf-${CUDF_VER}" "-${CUDA_CLASSIFIER}.jar"
${WORKSPACE}/jenkins/printJarVersion.sh "spark_version" "${WORKSPACE}/.m2/org/apache/spark/spark-core_2.12/${SPARK_VER}" "spark-core_2.12-${SPARK_VER}" ".jar"
