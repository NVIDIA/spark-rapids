<ivysettings>
  <settings defaultResolver="art-chain"/>
  <properties environment="env"/>
  <!-- The realm must match the authentication realm returned by the server. -->
  <!-- You can get the realm name via the command below -->
  <!-- sh "curl -v REPO_URL 2>&1 | grep -i 'WWW-Authenticate'" -->
  <credentials
    host="${env.HOST_NAME}"
    realm="Artifactory Realm"
    username="${env.URM_CREDS_USR}"
    passwd="${env.URM_CREDS_PSW}"/>
  <resolvers>
    <chain name="art-chain" returnFirst="true">
      <ibiblio
        name="artifactory"
        m2compatible="true"
        root="${env.URM_URL}"/>
      <!-- Default: Maven Central -->
      <ibiblio
        name="maven-central"
        m2compatible="true"/>
    </chain>
  </resolvers>
</ivysettings>
